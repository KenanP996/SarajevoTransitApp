<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_checkout"
    tools:context=".ui.CheckoutScreen">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/header"
                android:id = "@+id/header" />


            <TextView
                android:id="@+id/order_summary"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="@string/order_summary"
                app:layout_constraintStart_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:textColor="@color/blue"
                android:layout_height="32dp"
                android:layout_width="match_parent"
                android:layout_marginTop="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/ticketType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/order_summary"
                android:background="@color/light_blue"
                tools:text="Adult Ticket x2"
                android:textColor="@color/black"
                android:layout_height="24dp"
                android:layout_width="350dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/ticket_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ticketType"
                tools:text="1.6KM"
                android:background="@color/light_blue"
                android:textColor="@color/black"
                android:layout_height="24dp"
                android:layout_width="350dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"/>



            <View
                android:id="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ticket_price"
                android:layout_height="8dp"
                android:layout_width="match_parent"/>



            <TextView
                android:id="@+id/subtotal"
                android:textColor="@color/black"
                android:layout_height="24dp"
                android:layout_width="350dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:text="Subtotal: 3.2 KM"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_blue"/>

            <TextView
                android:id="@+id/tax"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:layout_height="24dp"
                android:layout_width="350dp"
                app:layout_constraintTop_toBottomOf="@id/subtotal"
                tools:text="Tax: 0KM"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/light_blue"/>


            <TextView
                android:id="@+id/total"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:layout_height="24dp"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tax"
                tools:text="Total: 3.2 KM"
                android:textStyle="bold"
                android:layout_marginStart="280dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/submit_button"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/submit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total"
                android:layout_marginTop="75dp"/>

            <Button
                android:id="@+id/cancel_button"
                android:background="@color/blue"
                android:textColor="@color/white"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/submit_button"
                android:layout_marginTop="20dp" />




        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>